<Page
    x:Class="PantallasMonopoly.SearchMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PantallasMonopoly"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PantallasMonopoly.ViewModels"
    xmlns:cv="using:PantallasMonopoly.Models"
    mc:Ignorable="d">

    <Page.Background>
        <ImageBrush ImageSource="../CustomAssets/dbk.png" Stretch="None"></ImageBrush>
    </Page.Background>

    <Page.Resources>
        <cv:ContrasenaConverter x:Key="contrasenaConverter"></cv:ContrasenaConverter>
    </Page.Resources>

    <RelativePanel>
     

            <RelativePanel x:ConnectionId='2'
                     Name="Header"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       Background="#8BC34A"
                       VerticalAlignment="Stretch">
                
            <!--<FontIcon 
                       Name="icon"
                       Glyph="&#xE72B;" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="40"
                       Foreground="White"
                       Margin="20,0,0,0"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"/>-->

            <AppBarButton x:ConnectionId='11' 
                       Name="icon"
                       Icon="Back"
                       Foreground="White"
                       RelativePanel.AlignTopWithPanel="True"
                       HorizontalContentAlignment="Stretch"
                       RelativePanel.AlignBottomWithPanel="True"            
                       VerticalAlignment="Stretch"
                       Margin="0,0,0,30"
                       VerticalContentAlignment="Center"
                                                      
                >

                <AppBarButton.RenderTransform>
                    <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
                </AppBarButton.RenderTransform>

            </AppBarButton>





            <TextBlock x:ConnectionId='12'  
                       Name="Title"
                       RelativePanel.RightOf="icon"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       Text="SEARCH" 
                       FontSize="60" 
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="White"
                       FontWeight="Medium" Margin="0,0,0,0"/>

        </RelativePanel>


        <Border x:ConnectionId='3' 
            Name="Content" 
            RelativePanel.Below="Header"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignBottomWithPanel="True"
            HorizontalAlignment="Center"
            CornerRadius="8"
            Background="White"
            VerticalAlignment="Center"
            MinHeight="500"
            MaxHeight="500">

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox PlaceholderText="Search a lobby" BorderThickness="0,0,0,1" VerticalAlignment="Center" MinWidth="600" MaxWidth="600" Margin="8"></TextBox>
                    <AppBarButton Icon="Refresh" Label="Refresh" Command="{Binding actualizarCommand}"></AppBarButton>
                </StackPanel>

                <ScrollViewer MaxHeight="400" MinHeight="400">
                <ListView x:ConnectionId='9' Name="listadoLobby" ItemsSource="{Binding listadoLobby, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding lobbySeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <SymbolIcon Grid.Column="0" Symbol="Permissions" Margin="0,0,0,0" Visibility="{Binding Path=contrasena,  Converter={StaticResource contrasenaConverter}}"/>
                                <TextBlock  Grid.Column="1" Text="{Binding Path=nombre}" Margin="12,0,0,0"></TextBlock>


                                <StackPanel Grid.Column="2"  Orientation="Horizontal" HorizontalAlignment="Right" Margin="450,0,0,0">
                                    <SymbolIcon Symbol="Contact" Margin="0,0,20,0"/>
                                    <TextBlock Text="{Binding Path=listadoJugadores.Count}"></TextBlock>
                                    <TextBlock Text="/"></TextBlock>
                                    <TextBlock Text="{Binding Path=maxJugadores}"></TextBlock>
                                </StackPanel>

                            </Grid>
                                                     
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </ScrollViewer>


            </StackPanel>


        </Border>




        <Border Background="White" Grid.Column="0"
                    BorderThickness="0,0,1,0"
                    BorderBrush="#2196F3"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                CornerRadius="8,0,0,8">

            <RelativePanel MinWidth="600" MaxWidth="600">
                <StackPanel x:ConnectionId='4' Name="ChatHeader" Background="#8BC34A" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
                    <TextBlock Text="Global chat" FontSize="28" Foreground="White" TextAlignment="Center"></TextBlock>
                </StackPanel>

                <ScrollViewer x:ConnectionId='5' Name="Chat" MaxHeight="400" MinHeight="100"  RelativePanel.Below="ChatHeader" RelativePanel.Above="ChatInput" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
                    <ListView x:ConnectionId='7' Name="ListaMensajes" SelectionMode="None" ItemsSource="{Binding chatGlobal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                        <ListView.ItemTemplate>
                            <DataTemplate                        >
                                <TextBlock x:ConnectionId='8'                                                   TextWrapping="Wrap"></TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>


                <TextBox x:ConnectionId='6' Name="ChatInput" Text="{Binding nuevoMensaje, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                             RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" PlaceholderText="Type here" BorderThickness="0,0,0,0" ></TextBox>
            </RelativePanel>

        </Border>




    </RelativePanel>



</Page>

