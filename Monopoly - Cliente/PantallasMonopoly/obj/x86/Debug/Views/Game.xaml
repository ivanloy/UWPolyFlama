<Page
    x:Class="PantallasMonopoly.Views.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PantallasMonopoly.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:vm="using:PantallasMonopoly.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:GameViewModel></vm:GameViewModel>
    </Page.DataContext>

    <RelativePanel>

        <StackPanel
            Orientation="Horizontal"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.AlignBottomWithPanel="True">

            <Border
                Height="180"
                Width="300"
                BorderThickness="4"
                BorderBrush="Black"
                CornerRadius="35"
                Margin="15"
                >
                <RelativePanel>

                    <Rectangle x:ConnectionId='8'
                        Name="rct_playerBox"
                        Width="300"
                        Height="180"
                        Fill="Red"/>

                    <Rectangle x:ConnectionId='9'
                        Name="rct_money"
                        RelativePanel.AlignBottomWithPanel="True"
                        Width="300"
                        Height="120"
                        Fill="DarkRed"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].nombre}"
                        FontSize="30"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="Bold"
                        Margin="20,5,0,0"
                        RelativePanel.AlignTopWith="rct_playerBox"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].dineroConSimboloDolar}"
                        FontSize="40"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="ExtraBold"
                        Margin="20,5,0,0"
                        RelativePanel.AlignLeftWith="rct_playerBox"
                        RelativePanel.AlignTopWith="rct_money"/>
                    
                    <Grid
                        RelativePanel.AlignBottomWith="rct_playerBox"
                        RelativePanel.AlignRightWith="rct_money"
                        Margin="0,0,7,50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="12" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="11" />
                            <RowDefinition Height="11" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>

                        <Rectangle Width="Auto" Height="Auto" Fill="Black" Grid.Column="0" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="Black" Grid.Column="0" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[2].brushColor}" Grid.Column="1" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[3].brushColor}" Grid.Column="1" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[4].brushColor}" Grid.Column="1" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[5].brushColor}" Grid.Column="2" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[6].brushColor}" Grid.Column="2" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[7].brushColor}" Grid.Column="2" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[8].brushColor}" Grid.Column="3" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[9].brushColor}" Grid.Column="3" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[10].brushColor}" Grid.Column="3" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[11].brushColor}" Grid.Column="4" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[12].brushColor}" Grid.Column="4" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[13].brushColor}" Grid.Column="4" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[14].brushColor}" Grid.Column="5" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[15].brushColor}" Grid.Column="5" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[16].brushColor}" Grid.Column="5" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[17].brushColor}" Grid.Column="6" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[18].brushColor}" Grid.Column="6" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[19].brushColor}" Grid.Column="6" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[20].brushColor}" Grid.Column="7" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[21].brushColor}" Grid.Column="7" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[22].brushColor}" Grid.Column="9" Grid.Row="0" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[23].brushColor}" Grid.Column="9" Grid.Row="1" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[24].brushColor}" Grid.Column="9" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[25].brushColor}" Grid.Column="9" Grid.Row="3" Margin="1"/>

                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[26].brushColor}" Grid.Column="10" Grid.Row="2" Margin="1"/>
                        <Rectangle Width="Auto" Height="Auto" Fill="{Binding Jugadores[0].listadoPropiedades[27].brushColor}" Grid.Column="10" Grid.Row="3" Margin="1"/>

                    </Grid>
                </RelativePanel>

            </Border>

            <Border
                Height="200"
                Width="300"
                BorderThickness="4"
                BorderBrush="Black"
                CornerRadius="35"
                Margin="15"
                >
                <RelativePanel>

                    <Rectangle x:ConnectionId='6'
                        Name="rct_playerBox2"
                        Width="300"
                        Height="200"
                        Fill="Blue"/>

                    <Rectangle x:ConnectionId='7'
                        Name="rct_money2"
                        RelativePanel.AlignBottomWithPanel="True"
                        Width="300"
                        Height="130"
                        Fill="DarkBlue"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].nombre}"
                        FontSize="35"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="Bold"
                        Margin="20,5,0,0"
                        RelativePanel.AlignTopWith="rct_playerBox2"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].dineroConSimboloDolar}"
                        FontSize="50"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="ExtraBold"
                        Margin="20,-3,0,0"
                        RelativePanel.AlignLeftWith="rct_playerBox2"
                        RelativePanel.AlignTopWith="rct_money2"/>

                </RelativePanel>

            </Border>

            <Border
                Height="200"
                Width="300"
                BorderThickness="4"
                BorderBrush="Black"
                CornerRadius="35"
                Margin="15"
                >
                <RelativePanel>

                    <Rectangle x:ConnectionId='4'
                        Name="rct_playerBox3"
                        Width="300"
                        Height="200"
                        Fill="Green"/>

                    <Rectangle x:ConnectionId='5'
                        Name="rct_money3"
                        RelativePanel.AlignBottomWithPanel="True"
                        Width="300"
                        Height="130"
                        Fill="DarkGreen"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].nombre}"
                        FontSize="35"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="Bold"
                        Margin="20,5,0,0"
                        RelativePanel.AlignTopWith="rct_playerBox3"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].dineroConSimboloDolar}"
                        FontSize="50"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="ExtraBold"
                        Margin="20,-3,0,0"
                        RelativePanel.AlignLeftWith="rct_playerBox3"
                        RelativePanel.AlignTopWith="rct_money3"/>

                    
                    
                </RelativePanel>

            </Border>

            <Border
                Height="200"
                Width="300"
                BorderThickness="4"
                BorderBrush="Black"
                CornerRadius="35"
                Margin="15"
                >
                <RelativePanel>

                    <Rectangle x:ConnectionId='2'
                        Name="rct_playerBox4"
                        Width="300"
                        Height="200"
                        Fill="MediumPurple"/>

                    <Rectangle x:ConnectionId='3'
                        Name="rct_money4"
                        RelativePanel.AlignBottomWithPanel="True"
                        Width="300"
                        Height="130"
                        Fill="Purple"/>

                    <TextBlock
                        Text="{Binding Jugadores[0].nombre}"
                        FontSize="35"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="Bold"
                        Margin="20,5,0,0"
                        RelativePanel.AlignTopWith="rct_playerBox4"/>
 
                    <TextBlock
                        Text="{Binding Jugadores[0].dineroConSimboloDolar}"
                        FontSize="50"
                        Foreground="White"
                        FontStyle="Italic"
                        FontWeight="ExtraBold"
                        Margin="20,-3,0,0"
                        RelativePanel.AlignLeftWith="rct_playerBox4"
                        RelativePanel.AlignTopWith="rct_money4"/>

                </RelativePanel>

            </Border>

        </StackPanel>

        <Rectangle
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            Height="80"
            Width="Auto"
            Fill="PaleVioletRed"/>

    </RelativePanel>
</Page>

